<!--<?xml version="1.0" encoding="utf-8" ?>-->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="oherreraEXAMEN.Views.vLogin"
             Title="vLogin">
    <ScrollView>
    <VerticalStackLayout>
        
        
        <Label      
            Text="CURSOS ONLINE"
            FontSize="20"     
            TextColor="Red"     
            VerticalOptions="Center"      
            HorizontalOptions="Center" />

            <!--IMAGEN INCIO-->

            <Image     
                Source="uisrael.jpg"     
                WidthRequest="300">

            </Image>

            <Label
                Text="Datos de inicio"
                FontSize="15"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                
            </Label>


            <!--GRID-->

            <Grid RowSpacing="20">
                <!--FILAS-->
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <!--COLUMNAS-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>

                <!--ETIQUETAS-->

                <Label 
                    Text="Usuario"                        
                    Grid.Row="0" 
                    Grid.Column="0" 
                    FontAttributes="Bold" 
                    FontSize="20"/>

                <Label 
                    Text="COntraseña" 
                    Grid.Row="1" 
                    Grid.Column="0" 
                    FontAttributes="Bold" 
                    FontSize="20"/>



                <StackLayout 
                    Grid.Row="0"             
                    Grid.Column="1">
                    
                    <Entry 
                        x:Name="txtUsuario" 
                        Placeholder="Ingrese Nombre">

                    </Entry>

                </StackLayout>
                
                <StackLayout     
                    Grid.Row="1"    
                    Grid.Column="1">

                    <Entry         
                        x:Name="txtContrasena"                         
                        IsPassword="True"
                        Placeholder="Ingrese contraseña">

                    </Entry>

                </StackLayout>
                
             
            </Grid>

            <Button
                x:Name="btnIngresar"
                Text="Ingresar"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Clicked="btnIngresar_Clicked_1">
                
            </Button>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>